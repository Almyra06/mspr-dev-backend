{% extends 'base.html.twig' %}

{% block title %}Concert index{% endblock %}

{% block body %}
    <h1>Concert index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Horaire_debut</th>
                <th>Horaire_fin</th>
                <th>Duree</th>
                <th>Emplacement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concert in concerts %}
            <tr>
                <td>{{ concert.id }}</td>
                <td>{{ concert.horaireDebut ? concert.horaireDebut|date('H:i:s') : '' }}</td>
                <td>{{ concert.horaireFin ? concert.horaireFin|date('H:i:s') : '' }}</td>
                <td>{{ concert.duree }}</td>
                <td>{{ concert.emplacement }}</td>
                <td>
                    <a href="{{ path('concert_show', {'id': concert.id}) }}">show</a>
                    <a href="{{ path('concert_edit', {'id': concert.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('concert_new') }}">Create new</a>
{% endblock %}
